{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "preserveConstEnums": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "target": "es5",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "jsxFactory": "h"
  },
  "paths": {
    "src/*": ["src/*"],
    "styles/*": ["src/styles/*"],
    "UI/*": ["src/core/components/*"]
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/@types/global.d.ts",
    "src/core/components/*"
  ]
}
